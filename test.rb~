

class InFrame 
      def initialize(userInput)
        @input = userInput
        @words_array = @input.split
      end




	def printFrame 
	  length = to_num
	  puts length
	  (length+2).times {print "*"}

	  puts ""
	  
	  for x in @words_array do
	    print "*"
	    print "#{x}"
	    section_length = ((x.length) + 2)
	    while (section_length) < length
	      print " "
	      section_length += 1
	    end
	    print "*"
	    puts ""
	  end
	    (length+2).times do
	      print "*"
	    end
          puts ""
	end

	def to_num
	  nums = []
	  @words_array.each do |word|
	    nums << word.length
	  end
	  puts nums.max
	  return nums.max
	end
end

print "What would you like to print: "

userInput = gets
userInput.to_s
display = InFrame.new(userInput)

display.printFrame

